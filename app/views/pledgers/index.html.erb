<p id="notice"><%= notice %></p>
<div class="d-flex align-items-center justify-content-around">
  <%= render 'sidebar'%>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Phonenumber</th>
        <th>Amount</th>
        <th>Expecteddate</th>
        <th>Fullfilled</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pledgers.each do |pledger| %>
        <tr>
          <td><%= pledger.name %></td>
          <td><%= pledger.phonenumber %></td>
          <td><%= pledger.amount %></td>
          <td><%= pledger.expecteddate %></td>
          <td><%= pledger.fullfilled %></td>
          <td><%= link_to 'Show', pledger %></td>
          <td><%= link_to 'Edit', edit_pledger_path(pledger) %></td>
          <td><%= link_to 'Destroy', pledger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<br>

<%= link_to 'New Pledger', new_pledger_path %>
</div>
